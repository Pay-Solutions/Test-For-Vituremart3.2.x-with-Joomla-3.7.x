<?xml version="1.0" encoding="UTF-8" ?>
<extension version="3.7" type="plugin" group="vmpayment" method="upgrade">
    <name>VM Payment - paysolutions</name>
    <creationDate>July 21 2017</creationDate>
    <author>Nevin Laosrisin</author>
    <authorUrl>http://www.thaiepay.com</authorUrl>
    <copyright>Copyright (C) 2017 PAYSOLUTIONS. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>3.2.2</version>
    <description><![CDATA[<a href="http://www.thaiepay.com" target="_blank">paysolutions</a> a varety of payment channels. ]]>
    </description>

    <files>
	<filename plugin="paysolutions">paysolutions.php</filename>
	<folder>language</folder>
    </files>
	
	<vmconfig>
        <fields name="params">
            <fieldset name="payment" addfieldpath="/administrator/components/com_virtuemart/fields">
                <field name="paysolutions_account" type="text" scope="com_virtuemart" label="VMPAYMENT_PAYSOLUTIONS_ACCOUNT"
                description="VMPAYMENT_PAYSOLUTIONS_ACCOUNT">
                </field>
				
				<field name="demo" type="radio"
				label="VMPAYMENT_PAYSOLUTIONS_SERVER"
                description="VMPAYMENT_PAYSOLUTIONS_SERVER"
				default="1">
                	<option value="1">COM_VIRTUEMART_NO</option>
	    			<option value="0">COM_VIRTUEMART_YES</option>
                </field>
            </fieldset>
        </fields>
    </vmconfig>


</extension>